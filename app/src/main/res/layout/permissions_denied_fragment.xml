<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_permission_denied"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Store permission is neeed"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/b_get_permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Get Permission"
        app:layout_constraintEnd_toEndOf="@+id/tv_permission_denied"
        app:layout_constraintStart_toStartOf="@+id/tv_permission_denied"
        app:layout_constraintTop_toBottomOf="@+id/tv_permission_denied" />
</androidx.constraintlayout.widget.ConstraintLayout>